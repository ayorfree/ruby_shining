# if...else

x = 1
if x > 2
  puts " x > 2"
elsif x <= 2 and x != 0
  puts " x = 1"
else
  puts "i don't know the value of x"
end

# if 修饰符
$debug = 1
print "debug\n" if $debug

# unless

x = 1

unless x > 2
  puts "x < 2"
else
  puts "x > 2"
end

# unless修饰符

$var = 1

print "1 -- this lint print \n" if $var
print "2 -- this line doesn't pirnt \n" unless $var

$var = false
print "3 -- this line print \n" unless $var

# case
$age = 5
case $age
  when 0..2
    puts '婴儿'
  when 3..6
    puts '小孩'
  when 7..12
    puts 'child'
  when 13..18
    puts "少年"
  else
    puts "other"
end

foo = false
bar = true
quu = false

case
  when foo then puts 'foo is true'
  when bar then puts 'bar is true'
  when quu then puts 'quu is true'
end